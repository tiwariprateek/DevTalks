<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:layout_marginBottom="12dp">

    <TextView
            android:text="This is my message "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_from_row" app:layout_constraintStart_toEndOf="@+id/imageview_chat_from_row"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageview_chat_from_row" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_chat_from_row" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:background="@drawable/rounded_edittext_register_login"
            android:maxWidth="240dp"
            android:textSize="24sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageview_chat_from_row"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>