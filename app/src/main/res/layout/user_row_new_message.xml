<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:layout_marginTop="16dp">

    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/username_textview_new_message"
            android:textSize="18sp" android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/imageview_new_message" app:layout_constraintBottom_toBottomOf="@+id/imageview_new_message"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/imageview_new_message"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.398"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageview_new_message"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>
</android.support.constraint.ConstraintLayout>